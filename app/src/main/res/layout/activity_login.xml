<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris">

    <EditText
        android:id="@+id/fieldPasswordLogin"
        style="@style/EditTextRounded"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/negro"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <EditText
        android:id="@+id/fieldUserLogin"
        style="@style/EditTextRounded"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/negro"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <ImageView
        android:id="@+id/userIconLogin"
        android:layout_width="67dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fieldUserLogin"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/passwordIconLogin"
        android:layout_width="64dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fieldPasswordLogin"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.511"
        app:srcCompat="@drawable/password" />

    <TextView
        android:id="@+id/appNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="@string/nombre_app"
        android:textColor="@color/salmon"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appIconProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/appIconProfile"
        android:layout_width="155dp"
        android:layout_height="159dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="292dp"
        android:layout_height="81dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/msj_inicio_sesion"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/negro"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="253dp"
        android:layout_height="70dp"
        android:layout_marginBottom="228dp"
        android:backgroundTint="@color/salmon"
        android:fontFamily="@font/noto_serif_lao"
        android:text="@string/ingreso"
        android:textAlignment="inherit"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldPasswordLogin"
        app:layout_constraintVertical_bias="0.343"
        app:strokeColor="@color/blanco"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/recovPassLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_serif_lao"
        android:text="@string/recuperar_contrasena"
        android:textColor="@color/negro"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />

    <TextView
        android:id="@+id/textNoAccount"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="@font/noto_serif_lao"
        android:text="@string/msj_cuenta_inexistente"
        android:textColor="@color/negro"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleLogin"
        app:layout_constraintVertical_bias="0.529" />

    <TextView
        android:id="@+id/registerHome"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/noto_serif_lao"
        android:text="@string/registro"
        android:textColor="@color/salmon"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textNoAccount"
        app:layout_constraintTop_toBottomOf="@+id/googleLogin"
        app:layout_constraintVertical_bias="0.428" />

    <Button
        android:id="@+id/googleLogin"
        android:layout_width="330dp"
        android:layout_height="66dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="@color/blanco"
        android:fontFamily="@font/noto_serif_lao"
        android:text="@string/ingreso_google"
        android:textAlignment="center"
        android:textColor="@color/negro"
        android:textSize="26sp"
        app:cornerRadius="13dp"
        app:icon="@drawable/google"
        app:iconSize="30dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/salmon"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
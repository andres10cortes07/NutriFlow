                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="@string/ejemploDescProductoElectronica"
                    android:textColor="@color/negro"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/precioProducto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="@string/ejemploPrecioProductoElectronica"
                    android:textColor="@color/salmon"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/disponibilidadProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/ejemploDisponiProductoElectronica"
                        android:textColor="@color/negro"
                        android:textSize="12sp"
                        android:layout_weight="1"/>

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/salmon"
                        android:text="@string/añadirACarro"
                        android:textColor="@color/blanco"
                        android:textSize="12dp"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagenProducto"
                android:layout_width="150dp"
                android:layout_height="150dp"
